<Window x:Class="Exo05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Exo05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="300">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>


        <Label Grid.Column="0" Grid.Row="0">Nom : </Label>
        <TextBlock Grid.Column="1" Grid.Row="0" Text="{Binding Nom}" />

        <Label Grid.Column="0" Grid.Row="1">Prénom :</Label>
        <TextBlock Grid.Column="1" Grid.Row="1" Text="{Binding Prenom}" />

        <Label Grid.Column="0" Grid.Row="2">Email :</Label>
        <TextBlock Grid.Column="1" Grid.Row="2" Text="{Binding Email}" />

        <Label Grid.Column="0" Grid.Row="3">Email Valid :</Label>
        <TextBlock Grid.Column="1" Grid.Row="3" Text="{Binding IsEmailValid}" />

    </Grid>
</Window>
